{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": "error",
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "no-undef": "warn",
        "no-mixed-spaces-and-tabs": "warn",
        "no-prototype-builtins": "warn",
        "no-constant-condition": "warn",
        "no-inner-declarations": "warn"
    }
}